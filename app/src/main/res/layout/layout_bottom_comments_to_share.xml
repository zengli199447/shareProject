<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/leave_a_message_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:background="@drawable/corners_hollow_text_edit_gray">

                <TextView
                    android:id="@+id/input_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="@string/leave_a_message"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/dp13" />

                <ImageView
                    android:id="@+id/smile"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@drawable/smile_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="4">


                <ImageView
                    android:id="@+id/like"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/like_icon" />


                <ImageView
                    android:id="@+id/link_share"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toRightOf="@+id/like"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/link_share_icon" />


                <RelativeLayout
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_toLeftOf="@+id/like">

                    <ImageView
                        android:id="@+id/comments_img"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/comments_icon" />

                    <TextView
                        android:id="@+id/comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/corners_soild_text_red_orange"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="99+"
                        android:textSize="10dp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp70"
                android:background="@drawable/corners_hollow_text_edit_gray">

                <com.example.administrator.sharenebulaproject.ui.view.ClearEditTextView
                    android:id="@+id/edit_input_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/transparent"
                    android:gravity="left"
                    android:hint="@string/leave_a_message"
                    android:lineSpacingExtra="@dimen/dp5"
                    android:minHeight="@dimen/dp20"
                    android:paddingRight="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp13" />
            </RelativeLayout>

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:padding="@dimen/dp10"
                android:text="@string/post"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>