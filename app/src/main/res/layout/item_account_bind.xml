<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/account_bind_zhifubao_bg">

        <RelativeLayout
            android:id="@+id/pay_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60">

            <View
                android:id="@+id/pay_icon"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/zhifubao_pay"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/pay_icon"
                android:gravity="center_vertical"
                android:text="中国建设银行 \n储蓄卡"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/pay_content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:layout_below="@+id/pay_title"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="186****7869        (柯西)"
            android:textColor="@color/white"
            android:textSize="@dimen/dp16" />

        <View
            android:id="@+id/add_pay"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pay_title"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/add_pay_bg" />

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/befor_open_bank"
            android:textSize="@dimen/dp12" />

    </RelativeLayout>

</LinearLayout>