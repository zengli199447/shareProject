<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/layout_title_bar" />-->

    <RelativeLayout
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/layout_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="51dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="@color/gray_light" />

        <RadioGroup
            android:id="@+id/group_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hotpage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_hotpage_selector"
                android:gravity="center"
                android:text="@string/information"
                android:textColor="@drawable/text_color_selector"
                android:textSize="@dimen/dp12" />

            <RadioButton
                android:id="@+id/top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_top_selector"
                android:gravity="center"
                android:text="@string/top"
                android:textColor="@drawable/text_color_selector"
                android:textSize="@dimen/dp12" />

            <RadioButton
                android:id="@+id/income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_income_selector"
                android:gravity="center"
                android:text="@string/income"
                android:textColor="@drawable/text_color_selector"
                android:textSize="@dimen/dp12" />

            <RadioButton
                android:id="@+id/mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_mine_selector"
                android:gravity="center"
                android:text="@string/mine"
                android:textColor="@drawable/text_color_selector"
                android:textSize="@dimen/dp12" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/guide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_max">

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp80"
                android:layout_weight="3"
                android:background="@drawable/top_share_icon" />

        </LinearLayout>


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp150"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/top_layout"
            android:layout_marginRight="@dimen/dp100"
            android:src="@drawable/arrow_icon" />

        <ImageView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp30"
            android:src="@drawable/text_icon" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/text"
            android:padding="@dimen/dp20"
            android:src="@drawable/page_icon" />

    </RelativeLayout>


</RelativeLayout>