<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/vip_type_img"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/vip_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/vip_type_img"
        android:gravity="center_vertical"
        android:text="@string/settlement_account"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/dp14" />

    <TextView
        android:id="@+id/up_grade_status"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/upgrade_text_bg"
        android:gravity="center"
        android:text="@string/immediately_upgrade"
        android:textColor="@color/white"
        android:textSize="@dimen/dp14" />

    <TextView
        android:id="@+id/up_grade_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp80"
        android:layout_marginRight="@dimen/dp30"
        android:layout_toLeftOf="@+id/up_grade_status"
        android:gravity="center"
        android:text="100元/年"
        android:textColor="@color/gray_light_text" />


</RelativeLayout>