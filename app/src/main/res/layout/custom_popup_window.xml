<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:text="@string/shape_content"
            android:textColor="@color/fatigue_red"
            android:textSize="@dimen/dp14" />


        <LinearLayout
            android:id="@+id/id_pop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_wechat"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp10"
                android:drawableTop="@drawable/wechat"
                android:gravity="center|top"
                android:paddingTop="@dimen/dp10"
                android:text="@string/share_wechat"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp14" />

            <TextView
                android:id="@+id/wechat_friends"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp10"
                android:drawableTop="@drawable/wechat_friends"
                android:gravity="center|top"
                android:paddingTop="@dimen/dp10"
                android:text="@string/wechat_friends"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp14" />

            <TextView
                android:id="@+id/qq"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp10"
                android:drawableTop="@drawable/qq"
                android:gravity="center|top"
                android:paddingTop="@dimen/dp10"
                android:text="@string/qq"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp14" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>