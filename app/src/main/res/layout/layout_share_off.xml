<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp30"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp14"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/corners_hollow_text_red_orange"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:text="@string/placed_at_the_top"
        android:gravity="center"
        android:textColor="@color/motion_red"
        android:textSize="@dimen/dp10" />

    <TextView
        android:id="@+id/time_no"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp14"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/top"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray_light_text"
        android:textSize="@dimen/dp12" />

    <TextView
        android:id="@+id/amount_read_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/time_no"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="阅读次数 ：20000"
        android:textColor="@color/gray_light_text"
        android:textSize="@dimen/dp12" />


</RelativeLayout>