<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_news_item"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:orientation="vertical">

    <View
        android:id="@+id/line_placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:text="标题"
        android:textColor="@color/black_"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp5"
        android:id="@+id/title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/min_img1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/banner_off" />

        <ImageView
            android:id="@+id/min_img2"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:scaleType="centerCrop"
            android:background="@drawable/banner_off" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/min_img3"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/banner_off" />

    </LinearLayout>

    <include layout="@layout/layout_share_no" />

    <View
        android:id="@+id/bottom_line"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    </LinearLayout>

</LinearLayout>