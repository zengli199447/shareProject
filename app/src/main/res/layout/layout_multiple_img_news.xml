<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_multiple_img_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/multiple_img_title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:text="标题"
        android:textColor="@color/black_"
        android:textSize="@dimen/dp16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/min_img1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/banner_off"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/min_img2"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/banner_off"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/min_img3"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/banner_off"
            android:scaleType="centerCrop" />

    </LinearLayout>


</LinearLayout>