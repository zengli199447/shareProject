<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_news_item"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:orientation="vertical">

    <View
        android:id="@+id/line_placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/only_min_img"
                android:layout_width="110dp"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/banner_off" />

            <TextView
                android:id="@+id/title_content"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/only_min_img"
                android:paddingBottom="@dimen/dp5"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:lineSpacingExtra="8dp"
                android:text="标题\n123"
                android:textColor="@color/black_"
                android:textSize="@dimen/dp16" />

        </LinearLayout>

        <include layout="@layout/layout_share_no" />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light" />

    </LinearLayout>

</LinearLayout>