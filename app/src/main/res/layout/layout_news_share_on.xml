<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_news_share_on"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp14"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="1dp"
            android:background="@drawable/corners_hollow_text_red_orange"
            android:gravity="center"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:text="@string/placed_at_the_top"
            android:textColor="@color/motion_red"
            android:textSize="@dimen/dp10"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/starbean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray_light_text"
            android:textSize="@dimen/dp12" />

        <TextView
            android:id="@+id/form_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="来源"
            android:textColor="@color/gray_light_text"
            android:textSize="@dimen/dp12" />

        <TextView
            android:id="@+id/reading_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="阅读次数 ：20000"
            android:textColor="@color/gray_light_text"
            android:textSize="@dimen/dp12" />

    </LinearLayout>

    <com.example.administrator.sharenebulaproject.ui.view.DrawableCenterTextView
        android:id="@+id/shares_check"
        android:layout_width="@dimen/dp80"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corners_hollow_text_red"
        android:drawableRight="@drawable/share_no_icon"
        android:gravity="center_vertical"
        android:padding="@dimen/dp5"
        android:text="@string/shars_check"
        android:textColor="@color/fatigue_red"
        android:textSize="@dimen/dp15" />


</RelativeLayout>